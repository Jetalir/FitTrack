<Window x:Class="FitTrack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitTrack"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock Text="Username" FontSize="15"/>
            <TextBox Width="190" Height="28"/>
            <TextBlock Text="Password" FontSize="15"/>
            <TextBox Width="190" Height="28"/>
            <TextBlock>
                 <Hyperlink NavigateUri="RegisterWindow.xaml">Forgot password? </Hyperlink>
            </TextBlock>
            <Button Margin="0,10,0,0" Width="70" Height="30" Content="Sign in" FontSize="15"/>
            <Button Margin="0,20,0,0" Width="70" Height="30" Content="Register" FontSize="15"/>
        </StackPanel>
    </Grid>
</Window>
